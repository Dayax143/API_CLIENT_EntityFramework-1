@model Test

<h2>Create New Record</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Last_update" class="control-label"></label>
        <input asp-for="Last_update" class="form-control" type="datetime-local" />
        <span asp-validation-for="Last_update" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-action="ShowProducts" class="btn btn-secondary">Cancel</a>
</form>